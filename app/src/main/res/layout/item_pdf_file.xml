<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/border_box">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:ignore="MissingConstraints"
        android:elevation="8dp">
        <TextView
            android:id="@+id/tvCaseFileClientCase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dosya AdÄ±"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/ivCaseFileDeleteClientCase"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/delete_red"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/ivCaseFileDownloadClientCase"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/download_c"
            android:padding="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>