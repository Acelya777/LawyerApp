<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firebaseCrud.SendDataActivity">

    <TextView
        android:id="@+id/SendActivityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:text="@string/sendAct_textView_sendData_title"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/SendActivityEditTextTitle"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:hint="enter title here"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/SendActivityTextView"
        app:layout_constraintTop_toBottomOf="@+id/SendActivityTextView" />

    <TextView
        android:id="@+id/SendActivityTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/sendAct_textView_sendData_title1"
        android:textColor="@color/black"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="@+id/SendActivityTextView"
        app:layout_constraintTop_toBottomOf="@+id/SendActivityEditTextTitle" />

    <EditText
        android:id="@+id/SendActivityEditTextDes"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="enter description here"
        android:textColor="@color/black"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="@+id/SendActivityEditTextTitle"
        app:layout_constraintTop_toBottomOf="@+id/SendActivityTextView1" />

    <Button
        android:id="@+id/SendDataActivityBtnUpload"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/sendAct_Button_sendData"
        app:layout_constraintEnd_toEndOf="@+id/SendActivityEditTextDes"
        app:layout_constraintTop_toBottomOf="@+id/SendActivityEditTextDes" />
</androidx.constraintlayout.widget.ConstraintLayout>